<!--pages/community/repair/form.wxml-->
<cu-custom bgColor="bg-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">居民服务</view>
</cu-custom>
<!-- 居民服务表单 -->
<form>
<!-- 申请人 -->
	<view class="cu-form-group">
		<view class="title">申请人</view>
		<input placeholder="姓名"></input>
	</view>
<!-- 申请内容 -->
	<view class="cu-form-group">
		<view class="title">申请内容</view>
		<input placeholder="事务简要说明"></input>
	</view>
<!-- 申请日期 -->
	<view class="cu-form-group">
		<view class="title">申请日期</view>
		<picker mode="date" value="{{date}}"  bindchange="DateChange">
			<view class="picker">
				{{date}}
			</view>
		</picker>
	</view>
<!-- 申请时间 -->
  <view class="cu-form-group">
		<view class="title">申请时间</view>
		<picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="TimeChange">
			<view class="picker">
				{{time}}
			</view>
		</picker>
	</view>
<!-- 联系电话 -->
	<view class="cu-form-group">
		<view class="title">联系电话</view>
		<input placeholder="输入手机电话号码"></input>
		<view class="cu-capsule radius">
			<view class="cu-tag bg-blue">
				+86
			</view>
			<view class="cu-tag line-blue">
				中国大陆
			</view>
		</view>
	</view>
<!-- 服务地址 -->
	<view class="cu-form-group">
		<view class="title">服务地址</view>
		<input placeholder="输入服务地址"></input>
		<text class="cuIcon-locationfill text-orange"></text>
	</view>
<!-- 图片上传 -->
  <view class="cu-bar bg-white ">
		<view class="action">
			图片上传
		</view>
		<view class="action" style="font-size: 30rpx;">
			{{imgList.length}}/4
		</view>
	</view>
	<view class="cu-form-group">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
				<image src='{{imgList[index]}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>
  <!-- 备注信息 -->
	<view class="cu-form-group align-start">
		<view class="title">备注</view>
		<textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaBInput" placeholder="输入备注信息"></textarea>
	</view>
  <!-- 保存提交按钮 -->
  <view class="padding flex flex-direction">
  <button class="cu-btn bg-blue lg" bindtap="save_data">保存</button>
  <button class="cu-btn bg-red margin-tb-sm lg" bindtap="submit_data">提交</button>
</view>
  
</form>
