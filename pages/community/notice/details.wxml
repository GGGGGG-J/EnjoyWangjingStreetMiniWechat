<!--pages/community/notice/details.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">通知详情</view>
</cu-custom>
<block wx:for="{{messageData}}" wx:key="id">
  <!-- <view wx:if="{{item.id == currentId}}"> -->
<view class="bg-white padding-xs flex align-center radius-df">
    <view class="flex-sub text-center">
      <view class=" text-xl padding solid-bottom">
        <text class="text-xxl text-bold text-black">{{item.title}}</text>
      </view>
      <view class="padding text-left text-indent">{{item.content}}</view>
      <view class="padding text-right text-indent solid-top margin-top">{{item.created_at}}</view>
    </view>
  </view>
  <!-- </view> -->
</block>

