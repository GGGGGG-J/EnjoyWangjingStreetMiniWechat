<cu-custom bgColor="bg-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">社区通知</view>
</cu-custom>
<!-- 消息列表 -->
<block wx:if="{{TabCur==0}}">
  <view class="cu-card article {{isCard?'no-card':''}}">
    <view class="cu-item shadow">
      <view class="title">
        <view class="flex justify-between">
          <view class="text-cut">社区通知</view>
          <view class="text-cut text-red">未读</view>
        </view>
      </view>
      <view class="content">
        <view class="desc">
          <view class="text-content solid-bottom"> 您的报修已完成维修，请及时确认维修结果，点击查看详细。
          </view>
