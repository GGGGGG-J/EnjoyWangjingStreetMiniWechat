<!--pages/community/report/report.wxml-->
<cu-custom bgColor="bg-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">信息填报</view>
</cu-custom>
<view class="cu-load {{statusTop == 'success' ? 'bg-green light':'bg-red light'}}" animation="{{animation}}" style="height: 0">
  {{messageTop}} <text class="cuIcon-roundclose lg padding-right-xs" hidden="{{!statusTop == 'error'}}"></text>
</view>

<view class="cu-bar bg-white solid-bottom">
  <view class='action'>
    <text class='cuIcon-titles text-blue '></text> 社区信息填报
  </view>
  <view class='action'>
    <!-- 右侧按钮 -->
  </view>
</view>

<!-- 信息填报表单 -->
<form>
  <!-- 联系人 -->
  <view class="cu-form-group">
    <view class="title">联系人</view>
    <input placeholder="请输入联系人"></input>
  </view>
  <!-- 联系电话 -->
  <view class="cu-form-group">
    <view class="title">联系电话</view>
    <input placeholder="请输入联系人电话"></input>
    <view class="cu-capsule radius">
      <view class="cu-tag bg-blue">
        +86
      </view>
      <view class="cu-tag line-blue">
        中国大陆
      </view>
    </view>
  </view>
  <!-- 上报标题 -->
  <view class="cu-form-group">
    <view class="title">标题</view>
    <input placeholder="请输入标题"></input>
  </view>
  <!-- 上报内容 -->
  <view class="cu-form-group align-start">
    <view class="title">上报内容</view>
    <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaBInput" placeholder="上报内容"></textarea>
  </view>
  <!-- 地址 -->
  <view class="cu-form-group solid-bottom">
    <view class="title">地址</view>
    <input placeholder="请输入地址"></input>
    <text class="cuIcon-locationfill text-orange"></text>
  </view>
  <!-- 图片上传 -->
  <view class="cu-bar bg-white ">
    <view class="action">
      图片上传
    </view>
    <view class="action" style="font-size: 30rpx;">
      {{imgList.length}}/4
    </view>
  </view>
  <view class="cu-form-group">
    <view class="grid col-4 grid-square flex-sub">
      <view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
        <image src='{{imgList[index]}}' mode='aspectFill'></image>
        <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
          <text class="cuIcon-close"></text>
        </view>
      </view>
      <view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
        <text class="cuIcon-cameraadd"></text>
      </view>
    </view>
  </view>
  <!-- 保存提交按钮 -->
  <view class="padding bg-white">
    <button class="cu-btn bg-green margin-tb-sm lg block" bindtap="submit_data">提交</button>
  </view>
</form>
<!-- 提示消息 -->
<view class="toast-fixed-center" hidden="{{!show}}" style="z-index: 99;">
  <view class="radius-lg padding animation-slide-top text-lg {{status == 'success' ? 'bg-green light':'bg-red light'}}">
    <text class="cuIcon-info"></text> {{message}}
  </view>
</view>
<!-- 底部版权声明 -->
<import src="/pages/template/copyright.wxml" />
<view class="margin-top">
  <template is="copyright"></template>
</view>