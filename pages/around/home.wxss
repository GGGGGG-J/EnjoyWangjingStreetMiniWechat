.right-tool {
  position: fixed;
  bottom: 35%;
  right: 3%;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1000;
}
.right-tool-radius {
  border-radius: 20rpx;
}

.right-tool-margin {
  margin-top:45%;
  margin-right: 3%;
}

.location-margin-top {
  margin-top: 100rpx;
}

.card-swiper {
  position: fixed;
  bottom: 4%;
  width: 100%;
  height: 200rpx;
}

.swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
}
