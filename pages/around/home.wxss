@import "/components/colorui/main.wxss";
@import "/components/colorui/icon.wxss";

.map_container {
  position: absolute;
  top: 0;
  bottom: 20rpx;
  left: 0;
  right: 0;
}

.map {
  width: 100%;
  height: 100%;
}

.map_cover {
  position: relative;
  z-index: 9999;
  /* 将 z-index 属性值调整为比地图组件低 */
}

.text-right-xl {
  font-size: 65rpx;
  padding: 15rpx;
}

