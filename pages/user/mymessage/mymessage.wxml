<!--pages/user/mymessage/mymessage.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">我的消息</view>
</cu-custom>
<!-- 搜素框 -->
<view class="cu-bar search bg-white margin-0 solid-bottom">
  <view class="search-form round">
    <text class="cuIcon-search"></text>
    <input type="text" placeholder="搜索我的消息" confirm-type="search"></input>
  </view>
  <view class="action">
    <button class="cu-btn bg-green shadow-blur round">搜索</button>
  </view>
</view>

<!-- 类别切换 -->
<scroll-view scroll-x class="bg-white nav text-left text-lg">
  <view class="cu-item {{0==TabCur?'text-red cur':''}}" bindtap="tabSelect" data-id="0">
    全部
  </view>
  <view class="cu-item {{1==TabCur?'text-red cur':''}}" bindtap="tabSelect" data-id="1">
    未读
  </view>
  <view class="cu-item {{2==TabCur?'text-red cur':''}}" bindtap="tabSelect" data-id="2">
    已读
  </view>
</scroll-view>
<!-- 消息列表 -->
<block wx:if="{{TabCur==0}}">
  <view class="cu-card article {{isCard?'no-card':''}}">
    <view class="cu-item shadow">
      <view class="title">
        <view class="flex justify-between">
          <view class="text-cut">居民服务</view>
          <view class="text-cut text-red">未读</view>
        </view>
      </view>
      <view class="content">
        <view class="desc">
          <view class="text-content solid-bottom"> 您的报修已完成维修，请及时确认维修结果，点击查看详细。
          </view>
          <view class="flex justify-between margin-top-sm">
            <view class="light text-sm round">报修结果通知</view>
            <view class="light text-sm round"> 2023年7月14日 11:20</view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="cu-card article {{isCard?'no-card':''}}">
    <view class="cu-item shadow">
      <view class="title">
        <view class="flex justify-between">
          <view class="text-cut">居民服务</view>
          <view class="text-cut text-green">已读</view>
        </view>
      </view>
      <view class="content">
        <view class="desc">
          <view class="text-content solid-bottom"> 您的报修已被接单，请耐心等待维修，点击查看详细。
          </view>
          <view class="flex justify-between margin-top-sm">
            <view class="light text-sm round">报修结果通知</view>
            <view class="light text-sm round"> 2023年7月14日 11:20</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</block>

<import src="/pages/template/copyright.wxml" />
<view class="margin-top">
  <template is="copyright"></template>
</view>