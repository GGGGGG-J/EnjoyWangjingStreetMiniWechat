<!--pages/user/myorder/detail.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">工单详情</view>
</cu-custom>

<view wx:if="{{item}}">
  <!-- 提交工单后显示 -->
  <!-- 基本信息 -->
  <view class="cu-bar bg-white solid-bottom">
    <view class="action">
      <text class="cuIcon-titles text-blue"></text> 基本信息
    </view>
  </view>
  <view class=" bg-white solid-bottom">
    <view class="padding-lr-xl padding-tb-sm text-df flex align-center">申请人：{{item.name}}</view>
    <view class="padding-lr-xl padding-tb-sm text-df flex align-center">联系电话：{{item.phone}}</view>
    <view class="padding-lr-xl padding-tb-sm text-df flex align-center">工单类型：{{item.ticket_type_name}}</view>
  </view>
  <!-- 问题描述 -->
  <view class="cu-bar bg-white solid-bottom">
    <view class="action">
      <text class="cuIcon-titles text-blue"></text> 问题描述
    </view>
  </view>
  <view class="bg-white solid-bottom">
    <view class="padding-lr-xl padding-tb-sm text-df flex align-center">{{item.description}}</view>
  </view>
  <!-- 图片 -->
  <view class="cu-bar bg-white solid-bottom">
    <view class="action">
      <text class="cuIcon-titles text-blue"></text> 工单图片
    </view>
  </view>
  <view class="bg-white solid-bottom">
    <view class="padding-lr-xl padding-tb-sm text-df flex align-center" wx:for="{{item.ticket_images}}">
    <!-- <image src="{{item.image}}" mode=""/> -->
    </view>
  </view>
  <!-- <block wx:if="{{item.worker}}"> -->
  <!-- 社工处理后显示 -->
  <!-- 维修记录 -->
  <view class="cu-bar bg-white solid-bottom">
    <view class="action">
      <text class="cuIcon-titles text-blue"></text> 维修记录
    </view>
  </view>
  <view class="bg-white solid-bottom">   
      <view class="padding-lr-xl padding-tb-sm text-df flex align-center">{{item.reply?item.reply:'等待处理'}}</view>
  </view>
  <!-- 维修结果确认 -->
  <view class="cu-bar bg-white solid-bottom">
    <view class="action">
      <text class="cuIcon-titles text-blue"></text> 维修结果
    </view>
  </view>
  <view class="bg-white solid-bottom">   
      <view class="padding-lr-xl padding-tb-sm text-df flex align-center">{{item.reply?item.reply:'暂无结果'}}</view>
  </view>
<!-- </block> -->
  <!-- 评分 -->
  <view class="cu-bar bg-white solid-bottom">
    <view class="action">
      <text class="cuIcon-titles text-blue"></text>服务评价
    </view>
  </view>
  <view class="bg-white solid-bottom">
    <view class="padding-lr-xl padding-tb-sm text-xxl flex align-center">
      <view class="text-df ">请给服务评分: </view>
      <view wx:for="{{count}}" bindtap="click" data-index="{{index}}" wx:key="item">
        <text class="{{index > active ? 'cuIcon-favor' : 'cuIcon-favorfill'}} {{extraClass}} text-yellow padding-xs"></text>
      </view>
    </view>
  </view>
</view>
<view wx:else>
  <!-- 没有内容时的渲染 -->
  <import src="/pages/template/nodata.wxml" />
  <view class="margin-top">
    <template is="nodata"></template>
  </view>
</view>
<!-- 底部版权声明 -->
<import src="/pages/template/copyright.wxml" />
<view class="margin-top">
  <template is="copyright"></template>
</view>